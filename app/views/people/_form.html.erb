<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :birth %>
    <%= f.input :phone %>
    <%= f.input :cpf %>
    <%= f.input :rg %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
