<div class="box box-primary">
      <div class="box-body">
          <table class="table table-bordered table-striped dataTable">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matrícula</th>
      <th>Alocação</th>
      <th>Função</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.where(project_id[self.id]) do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= resource.resource_id %></td>
        <td><%= resource.function %></td>
        <td><%= resource.alocation %></td>
        <td><%= link_to 'Ver', resource, class: 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_resource_path(resource), class: 'btn btn-default' %></td>
        <td><%= link_to 'Deletar', resource, method: :delete, class: 'btn btn-default', data: { confirm: 'Confirma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
          
      </div>
</div>
